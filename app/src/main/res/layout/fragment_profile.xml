<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prof"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="Android"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="Department:- Mobile OS"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="18dp"
        />
    <TextView
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="Roll No:  0101010101"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        ></TextView>
    <TextView
    android:id="@+id/batch_no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/roll_no"
    android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/roll_no"
        android:textSize="20dp"
    android:textColor="#000000"
    android:text="Batch : A1"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    ></TextView>
    <TextView
        android:id="@+id/mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/batch_no"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/roll_no"
        android:textSize="20dp"
        android:text="Mentor: Linux"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        ></TextView>




</RelativeLayout>